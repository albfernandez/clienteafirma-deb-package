#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

override_dh_auto_build:
	mvn clean package -Dmaven.test.skip=true

override_dh_install:
	mkdir -p $(CURDIR)/debian/tmp/usr/share/autofirma/
	cp afirma-simple/target/afirma-ui-simpleafirma*.jar $(CURDIR)/debian/tmp/usr/share/autofirma/AutoFirma.jar
	cp afirma-ui-simple-configurator/target/original-afirma-ui-simpleafirma-configurator*.jar $(CURDIR)/debian/tmp/usr/share/autofirma/AutoFirmaConfigurador.jar
	# clean files
	zip -d $(CURDIR)/debian/tmp/usr/share/autofirma/AutoFirma.jar nss/WINDOWS/nss32.zip nss/WINDOWS/nss64.zip
	zip -d $(CURDIR)/debian/tmp/usr/share/autofirma/AutoFirmaConfigurador.jar linux/certutil.linux.zip windows/certutil.windows.zip osx/certutil.osx.zip
	dh_install


%:
	dh $@


# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
