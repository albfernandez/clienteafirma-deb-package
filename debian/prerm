#!/bin/sh
# prerm script for autofirma
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|upgrade|deconfigure)
		# damos permisos de desinstalacion de los certificados del almacen de firefox
		if [ -f "/usr/share/autofirma/uninstall.sh" ]; then			
			sh /usr/share/autofirma/uninstall.sh
			echo "Se ha borrado el certificado CA de los almacenes de Firefox"
		fi

		# borramos los certificados instalados en el almacenamiento del sistema
		rm -rf /usr/share/ca-certificates/AutoFirma/
		rm -rf /usr/share/ca-certificates/autofirma/
		rm -f /usr/local/share/ca-certificates/AutoFirma_ROOT.crt
		rm -f /usr/local/share/ca-certificates/Autofirma_ROOT.crt
		rm -f /usr/share/autofirma/uninstall.sh
		rm -f /usr/share/autofirma/autofirma.pfx
		rm -f /usr/share/autofirma/AutoFirma_ROOT.cer
		rm -f /usr/share/autofirma/Autofirma_ROOT.cer


		update-ca-certificates

		echo "Se ha borrado el certificado CA en el almacenamiento del sistema"
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
